{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
	},
	"exclude": [
		"**/build/",
		"**/coverage/",
		"**/dist/",
		"**/node_modules/",
		"**/*.test.ts"
	],
	"include": [
		"src/",
	]
}
